{% extends 'base.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
    <h1 style="text-align:center">Equipe</h1>


<div class="container">
<div class='row'>
{{ form_start(formEquipe)}}
{{ form_widget(formEquipe)}}
<button class="btn btn-success" type="submit"><i class="fa fa-plus"></i></button>
{{ form_end(formEquipe)}}

</div>

<div class="row">
<div class="col-8">
    <table class="table">
    {% for equipe in equipes %}
        <thead>
            <tr>
                <th>{{ equipe.nom }}</th>
                
                <th>Personne</th>
                <th>{{ include('team/_delete_equipe.html.twig', {'button_label': 'Update'}) }}</th>
            </tr>
        </thead>
        <tbody>
        
            <tr>
                
                <td></td>
                <td>
                {% for p in equipe.relation%}
                    {{p.prenom}} {{p.nom}},
                {% endfor%}
                </td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
 <div class="col-4">
 {{ form_start(formPersonne)}}

{{ form_widget(formPersonne)}}
<button class="btn btn-success" type="submit"><i class="fa fa-plus"></i></button>

{{ form_end(formPersonne)}}
<ul>
 {% for personne in personnes %}
 <li>{{ personne.nom }} {{ personne.prenom }} {{ include('team/_delete_form.html.twig', {'button_label': 'Update'}) }}</li>
 {% endfor %}
</ul>
</div>
</div>   
</div>

    
{% endblock %}
